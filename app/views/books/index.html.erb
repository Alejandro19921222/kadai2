<p class="flash"><%= flash[:notice] %></p>

<h1>Books</h1>

<table>
<thead>
<tr>
<td><strong>Title</strong></td>
<td><strong>Body</strong></td>
</tr>

</thead>
<tbody>
<% @books.each do |book| %>
<td><%= book.title %></td>
<td><%= book.body %></td>

<td><%= link_to "Show", book_path(book.id) %></td>
<td><%= link_to "Edit", edit_book_path(book.id) %></td>
<td><%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
</tr>

<% end %>
</tbody>
</table>



<h2>New Book</h2>
<%= form_for @book do |f| %>
 <% if @book.errors.any? %>
  <div class="box">
  <h3 class="headline"><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>
<% end %>

<%= form_with model:@book, local: true do |f| %>
<h5>Title</h5>
<%= f.text_field :title %>
<h5>Body</h5>
<%= f.text_area :body %>
<br>
<%= f.submit "Create Book" %>

<% end %>
